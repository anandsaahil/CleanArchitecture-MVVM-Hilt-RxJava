                    android:layout_marginEnd="@dimen/default_frame_margin"
                    android:layout_marginBottom="@dimen/item_padding">

                    <View
                        android:id="@+id/tv_character_name_shimmer_one"
                        android:layout_width="@dimen/shimmer_item_width"
                        android:layout_height="@dimen/recycler_margin"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@color/grey"
                        android:layout_marginBottom="@dimen/arrow_margin"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintBottom_toTopOf="@id/tv_character_desc_shimmer_one"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <View
