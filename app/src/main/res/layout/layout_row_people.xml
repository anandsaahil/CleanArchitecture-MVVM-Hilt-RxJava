<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/item_padding"
    android:layout_marginStart="@dimen/default_frame_margin"
    android:layout_marginEnd="@dimen/default_frame_margin"
    android:layout_marginBottom="@dimen/item_padding">

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/UserTitleStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Sahil Anand"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/item_padding"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/arrow_margin"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toStartOf="@id/tv_user_gender"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/tv_user_email"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_user_email"
        style="@style/UserInfoStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Software Engineer"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/item_padding"
        app:layout_constraintEnd_toStartOf="@id/tv_user_gender"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_user_gender"
        style="@style/UserGenderStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Male"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>